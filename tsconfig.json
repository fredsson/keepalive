{
  "compilerOptions": {
      "module": "commonjs",
      "lib": ["es2017", "dom"],
      "target": "ES2015",
      "noImplicitAny": true,
      "strict": true,
      "noUnusedLocals": false,
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "outDir": "dist",
      "rootDir": "./src",
  },
  "include": ["src/**/*.ts"]
}